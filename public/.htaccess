# Utilisation du front controller en tant que fichier index
DirectoryIndex index.php

# Désactivation des MultiViews
<IfModule mod_negotiation.c>
    Options -MultiViews
</IfModule>

<IfModule mod_rewrite.c>
    # Options pour activer les symlinks si nécessaire
    Options +SymLinksIfOwnerMatch

    RewriteEngine On

    # Réécriture de l'URL en fonction du contexte (base du projet)
    RewriteCond %{REQUEST_URI}::$0 ^(/.+)/(.*)::\2$
    RewriteRule .* - [E=BASE:%1]

    # Préservation de l'en-tête HTTP_AUTHORIZATION supprimé par Apache
    RewriteCond %{HTTP:Authorization} .+
    RewriteRule ^ - [E=HTTP_AUTHORIZATION:%0]

    # Redirection vers l'URI sans le front controller pour éviter le contenu dupliqué
    RewriteCond %{ENV:REDIRECT_STATUS} =""
    RewriteRule ^index\.php(?:/(.*)|$) %{ENV:BASE}/$1 [R=301,L]

    # Si le fichier demandé existe, le servir directement
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteRule ^ %{ENV:BASE}/index.php [L]
</IfModule>

<IfModule !mod_rewrite.c>
    <IfModule mod_alias.c>
        RedirectMatch 307 ^/$ /index.php/
    </IfModule>
</IfModule>

# --- Ajout des en-têtes de sécurité ---

# Strict-Transport-Security (HSTS) : Force l'utilisation de HTTPS
<IfModule mod_headers.c>
    Header always set Strict-Transport-Security "max-age=31536000; includeSubDomains"
</IfModule>

# Content Security Policy (CSP) : Contrôle les ressources chargées
<IfModule mod_headers.c>
    Header set Content-Security-Policy "default-src 'self'; script-src 'self' 'unsafe-inline'; style-src 'self'; img-src 'self' data:;"
</IfModule>

# X-Content-Type-Options : Empêche la détection de type MIME
<IfModule mod_headers.c>
    Header set X-Content-Type-Options "nosniff"
</IfModule>

# X-Frame-Options : Empêche le site d'être chargé dans un iframe (clickjacking)
<IfModule mod_headers.c>
    Header set X-Frame-Options "DENY"
</IfModule>

# X-XSS-Protection : Active la protection XSS intégrée du navigateur
<IfModule mod_headers.c>
    Header set X-XSS-Protection "1; mode=block"
</IfModule>
